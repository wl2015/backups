<#-- adminHeader -->

<#macro adminHead base>
	<link rel="stylesheet" href="${base}/res/css/admin/admin-header.css" />
	<link rel="stylesheet" href="${base}/res/css/admin/admin-common.css" />
	<div id="header" class="head">
			<div class="head_box">
				<div class="inner wrp">
					<h1 class="logo">
						<a title="shangwangding.com" href="${base}/home.html">
						<img  alt="上网订婚礼平台" title="上网订婚礼平台" src="${base}/res/img/htmledition/s/shangwangding.png" />
					</a>
					</h1>
					<div class="account">
						<div class="account_meta account_info">
							<a class="nickname" href="javascript:void(0)">${admin.name}</a>
						</div>
						<div class="account_meta account_logout">
							<a id="logout" href="${base}/admin/loginOut">退出</a>
						</div>
					</div>
					<div style="clear:both;"></div>
				</div>
			</div>
	</div>
</#macro>