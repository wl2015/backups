/**
 * 加载作品信息
 * */
function loadProduct(){
	$.ajax({
		url:$.WEB_ROOT+'/findAllProduct',
		type:'post',
		dataType:'json',
		success:function(res){
			if (res.code == 2001){
				showProduct(res.productList);
			}
			else{
				alert('作品无作品信息');
			}
		}
	});
}

function showProduct(data){
	$(data).each(function(index){
		
		var id = this.id;
		var title = this.title;
		var describe = this.describe;
		var surfaceAddr = this.surfaceAddr;
		var createTime = new Date();
		createTime.setTime(this.createTime * 1000);
		createTime = createTime.format("yyyy-MM-dd hh:mm:ss");
		var lastReviseTime = new Date();
		lastReviseTime.setTime(this.lastReviseTime * 1000);
		lastReviseTime = lastReviseTime.format("yyyy-MM-dd hh:mm:ss");
		var productHtml = '            <li class="item-list">'
		+ '                <img class="item-left" src="'+$.WEB_ROOT+surfaceAddr+'">'
		+ '                    <div class="item-left-cover item-js-left-cover">'
		+ '                        <span class="item-left-trigle"></span>'
		+ '                        <p class="item-left-covertext">'
		+ '                            封面'
		+ '                        </p>'
		+ '                    </div>'
		+ '                </img>'
		+ '                <span class="item-center item-js-center">'
		+ '                    <h4>'+title+'</h4>'
		+ '                    <input></input>'
		+ '                    <div class="item-center-describe item-js-center-describe">'
		+ '                        <p>'+describe+'</p>'
		+ '                        <textarea>'+describe+'</textarea>'
		+ '                    </div>'
		+ '                    <div class="item-center-time">'
		+ '                        <span>'
		+ '                            发布时间：'+createTime
		+ '                        </span>'
		+ '                        <span>'
		+ '                            最后修改时间：'+lastReviseTime
		+ '                        </span>'
		+ '                    </div>'
		+ '                </span>'
		+ '                <span class="item-right">'
		+ '                    <div class="item-right-checkdata">'
		+ '                        <a href="#">'
		+ '                            查看数据'
		+ '                        </a>'
		+ '                    </div>'
		+ '                    <div class="item-right-function">'
		+ '                            <p>'
		+ '                                ...'
		+ '                            </p>'
		+ '                            <span>'
		+ '                                更多'
		+ '                            </span>'
		+ '                    </div>'
		+ '                    <div class="item-right-function">'
		+ '                            <p>'
		+ '                                ...'
		+ '                            </p>'
		+ '                            <span>'
		+ '                                编辑'
		+ '                            </span>'
		+ '                    </div>'
		+ '                    <div class="item-right-function">'
		+ '                            <p>'
		+ '                                ...'
		+ '                            </p>'
		+ '                            <span>'
		+ '                                预览'
		+ '                            </span>'
		+ '                    </div>'
		+ '                </span>'
		+ '            </li>'
		+ '            <li class="item-line"></li>';
		
		
		productHtml = $(productHtml);
		$('.item').append(productHtml[0]);
		productHtml.find('.item-js-left-cover').mouseover(function(){
			var trigle=$(this).children('span');
			var covertext=$(this).children('p');
			$(trigle).removeClass('item-left-trigle2');
			$(trigle).toggleClass('item-left-trigle1');

			$(covertext).css({
				'top':'4px',
				'left':'2px'
			});
			$(covertext).html('更换封面');
		});
		productHtml.find('.item-js-left-cover').mouseout(function(){
			var trigle=$(this).children('span');
			var covertext=$(this).children('p');
			$(trigle).removeClass('item-left-trigle1');
			$(trigle).toggleClass('item-left-trigle2');

			$(covertext).css({
			'top':'0px',
			'left':'0px'
			});
			$(covertext).html('封面');
		});

		//点击'描述'出现大编辑框
		productHtml.find('.item-js-center-describe p').click(function(){
			var textarea=$(this).parent().children('textarea');
			var p=$(this);
			p.css('display','none');
			textarea.css('display','block');
			textarea.focus();
			
			//失去焦点则变回小边框
			textarea.blur(function(){
				textarea.css('display','none');
				p.css('display','block');
			});
		});
		
		//点击题目 出现文本框
		productHtml.find('.item-js-center h4').click(function(){
			var h4=$(this);
			var input=$(this).parent().children('input');
			var hvalue=$(h4).html();
			$(input).css('display','block');
			$(h4).css('display','none');
			$(input).focus();
			$(input).val(hvalue);

			$(input).blur(function(){
				$(input).css('display','none');
				$(h4).css('display','block');
				var ivalue=$(input).val();
				if(ivalue==""){
					$(h4).html('标题');
				}
				else{
					$(h4).html(ivalue);
				}
			});
		});
	});
}