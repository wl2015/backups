	cursor: pointer;
}

.user-logo-trigle {
	position: absolute;
	z-index: 5;
	width: 0px;
	height: 0px;
	border-top: 35px solid #41C3B4;
	border-right: 35px solid transparent;
}

/*以下为三角形和文字产生的动画*/
.user-logo-trigle1 {
            animation: trigle1 200ms forwards;
    -webkit-animation: trigle1 200ms forwards;
}

.user-logo-trigle2 {
            animation: trigle2 200ms forwards;
    -webkit-animation: trigle2 200ms forwards;
}
@keyframes trigle1{
    0% {
        border-top: 35px solid #41C3B4;
		border-right: 35px solid transparent;
    }
    100% {
       border-top: 60px solid #41C3B4;
		border-right: 60px solid transparent;
    }
}
@-webkit-keyframes trigle1{
    0% {
       border-top: 35px solid #41C3B4;
		border-right: 35px solid transparent;
    }
    100% {
      border-top: 60px solid #41C3B4;
		border-right: 60px solid transparent;
    }
}

@keyframes trigle2{
    0% {
        border-top: 60px solid #41C3B4;
		border-right: 60px solid transparent;
    }
    100% {
       border-top: 35px solid #41C3B4;
		border-right: 35px solid transparent;
    }
}
@-webkit-keyframes trigle2{
    0% {
       border-top: 60px solid #41C3B4;
		border-right: 60px solid transparent;
    }
    100% {
      border-top: 35px solid #41C3B4;
		border-right: 35px solid transparent;
    }
}

