.user-changelogo .allpic .pic img {
	width: 80px;
	max-height: 80px;
}

.user-changelogo .allpic .pic span {
	display: block;
	position: absolute;
	bottom: 3px;
	width: 80px;
	height: 18px;
	text-align: center;
	font-size: 13px;
	color: #575757;
}

.user-changelogo .button {
	width: 680px;
	height: 30px;
	padding: 10px;
	background: #E0E0E0;
	border-bottom-right-radius: 5px;
	border-bottom-left-radius: 5px;
}

.user-changelogo .button input {
	width: 100px;
	height: 30px;
	font-size: 17px;
	font-family: '微软雅黑';
	color: #575757;
	background: #E0E0E0;
	border: 1px solid #B8B8B8;
	box-shadow: 1px 1px 3px #B8B8B8,-1px -1px 3px #B8B8B8;
	cursor: pointer;
}

.user-changelogo .button input:hover {
	color: #FFFFFF;
	box-shadow: 1px 1px 3px #A0A0A0,-1px -1px 3px #A0A0A0;
}

.user-changelogo .button .left {
	float: left;
}

.user-changelogo .button .right {
	float: right;
	margin: 0 0 0 10px;
}